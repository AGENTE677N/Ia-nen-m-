function falarComIA() {
  document.getElementById('resposta').innerHTML = `
    <h2>Chat com a IA</h2>
    <p>Em breve você poderá conversar com a IA aqui.</p>
  `;
}

function fazerSimulado() {
  document.getElementById('resposta').innerHTML = `
    <h2>Simulado ENEM</h2>
    <p>O simulador estará disponível em breve com questões de Exatas e Humanas.</p>
  `;
}

function corrigirRedacao() {
  document.getElementById('resposta').innerHTML = `
    <h2>Correção de Redação</h2>
    <p>Envie sua redação para receber correção automática e feedback completo.</p>
  `;
}

function indicarConteudos() {
  document.getElementById('resposta').innerHTML = `
    <h2>Indicação de Conteúdos</h2>
    <p>Baseado nas suas respostas e erros, a IA vai sugerir temas de estudo aqui.</p>
  `;
}
